!!! 5
%html
  %head
    %title VoteNow!
    = stylesheet_link_tag 'bootstrap.min'
    = stylesheet_link_tag 'qr-table'
    = stylesheet_link_tag 'votings'
    = stylesheet_link_tag 'admin'
    = javascript_include_tag 'application'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js'
    = javascript_include_tag 'bootstrap.min'
    = csrf_meta_tags
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          .row
            .span12
              = link_to 'VoteNow!', '#', :class => 'brand'
              %ul.nav.pull-left
                %li.dropdown
                  %a.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
                    Hääletused
                    %b.caret
                  %ul.dropdown-menu
                    %li.nav-header Hääletused
                    %li= link_to 'Ott Lepland #1', '#'
                    %li= link_to 'Ott Lepland #2', '#'
                    %li= link_to 'Ott Lepland #3', '#'
                    %li.divider
                    %li= link_to 'Uus hääletus'
                %li= link_to 'Abi', '#'
              %ul.nav.pull-right
                %li
                  %a{:href => '#'}
                    %b.icon-user.icon-white
                    madisp
                %li= link_to 'Logi välja', '#'
    #main-content.container
      = yield
